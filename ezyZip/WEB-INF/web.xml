<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
<servlet>
        <servlet-name>AccountHoldersServlet</servlet-name>
        <servlet-class>com.bank.AccountHoldersServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AccountHoldersServlet</servlet-name>
        <url-pattern>/admin/AccountHoldersServlet</url-pattern>
    </servlet-mapping>


    <!-- Admin Login Servlet -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.bank.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>TransactionHistoryServlet</servlet-name>
    <url-pattern>/downloadTransactionHistory</url-pattern>
</servlet-mapping>
    <servlet>
    <servlet-name>TransactionHistoryServlet</servlet-name>
    <servlet-class>com.yourpackage.TransactionHistoryServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>TransactionHistoryServlet</servlet-name>
    <url-pattern>/transaction-history</url-pattern>
</servlet-mapping>
    

    <!-- Customer Login Servlet -->
    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>com.bank.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/customerLogin</url-pattern>
    </servlet-mapping>

    <!-- Deposit Servlet -->
    <servlet>
        <servlet-name>DepositServlet</servlet-name>
        <servlet-class>com.bank.DepositServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepositServlet</servlet-name>
        <url-pattern>/Deposit</url-pattern>
    </servlet-mapping>

    <!-- Another Deposit Servlet -->
    <servlet>
        <servlet-name>AnotherDepositServlet</servlet-name>
        <servlet-class>com.bank.AnotherDepositServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnotherDepositServlet</servlet-name>
        <url-pattern>/AnotherDeposit</url-pattern>
    </servlet-mapping>

    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.bank.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Fund Transfer Servlet -->
    <servlet>
        <servlet-name>FundTransferServlet</servlet-name>
        <servlet-class>com.bank.FundTransferServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FundTransferServlet</servlet-name>
        <url-pattern>/fundTransfer</url-pattern>
    </servlet-mapping>
	
</web-app>
